html,*{box-sizing:border-box}
 @font-face {
  font-family: web;
   src: url(font/LeagueMonoVariable.woff2), url(Rosemary.ttf);
  //font-variant:;
  //font-stretch:;
  //font-weight:;
  //style:;
   size-adjust: 100%;
   font-display: fallback;
   line-gap-override: normal;
   descent-override: 0%; //bottom to baseline height
   ascent-override: 70%; //top to baseline height
}
@font-face {
  font-family: ink;
  src: local(Ink Free);
  descent-override: normal; //bottom to baseline height
}
em{display:inline-block; width: 50%;
  font: bold 2em web,ink,sans-serif;
}
      body{
        background:#333;
        color:#aaa;
        text-align:center;
      }
      img{max-inline-size: 100%}
      @media /*not screen and (grid:0) and (grid:1), (grid:1) */
       (any-pointer){
        img{max-inline-size:15%}
      }
      p{display:inline-block; width:clamp(45ch, 100%, 75ch);
        border: thin yellow solid;
        overflow:visible;
        word-break:break-all;
      }
      p{display: revert}
      span{background: red}
      section{border: white thin solid;
        display:inline-block; box-sizing:content-box;
        word-break:break-all; line-height: 1; padding:0;
      }
      section:first-of-type{
        --d:10ch; width:var(--d); height:var(--d)}
      section:last-of-type{ font-size: 22px;
        --d1:5em; width:var(--d1); height:var(--d1)}
      span{display:inline-block}
      body :where(section:last-of-type, span/*inline invalid*/)::first-letter{
        color:yellow; font-size: 6ch; vertical-align: -.1em;
        border:yellow thin solid;
      }
      :is(div,a){border-color:green}
      div{display:block; width:100%;
          border:solid red thin;
          background: -webkit-image-set(url(gaara.webp) 1x) center/contain no-repeat;
      }

      body div{border-color:cyan}
      :is(div,a){border-color:yellow}
i{display:inline-block; margin:2px}
