/* .b.c+p{color:violet} */
[class*=ab]{color:yellow}
:lang(ar){direction: rtl; color: green}
div{counter-reset: p 0;
  p{counter-increment: p -5}
  p:first-child{counter-set: p 2} // no safari 19% gs.
  p::before{background:olivedrab;
    content: 'intro ' counter(p, decimal-leading-zero) ': ';
    min-inline-size: 1em; min-block-size: 1em;
    width: 1em; height: 1em;
  }
}
@supports (content: counter(somthing)) and
(counter-reset: somthing -5 a 5 f s){
  @media screen {
    p {border-radius: 0.9em}
  }
}
 ol{text-align: left;}
 body>ol:first-of-type {counter-reset: l1;
   li {counter-increment: l1} // required
   li::after {content: '[' counter(l1) ']=['
             counter(l1, lower-roman) ']'}
 }
body>ol:last-of-type {counter-reset: l2;
  ol {counter-reset: l2}
  li {counter-increment: l2}
  li::marker {content:counters(l2, '.', upper-roman) ') '}
  li::before {content:counters(l2, '.') ' = ' counters(l2, '.',lower-roman)}
}
video::cue{
  color:cyan;
  font: 1.2em web,ink,serif;

}